<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questionscreen"
    android:background="#80dfff">


    <TextView
        android:id="@+id/displayname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/accent_material_light"
        android:textSize="24dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/tvques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000"
        android:layout_marginTop="180dp"
        android:layout_alignStart="@+id/displayname"
        android:layout_marginBottom="50dp"
        android:textSize="24dp"/>

    <RadioGroup
        android:id="@+id/rgmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/displayname"
        android:layout_below="@+id/tvques">

        <RadioButton
            android:id="@+id/optionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="20dp"
            android:layout_marginBottom="13dp"/>

        <RadioButton
            android:id="@+id/optionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B"
            android:textSize="20dp"
            android:layout_marginBottom="13dp"/>

        <RadioButton
            android:id="@+id/optionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="20dp"
            android:layout_marginBottom="13dp"/>

        <RadioButton
            android:id="@+id/optionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D"
            android:textSize="20dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/buttonnextques"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/displayname"
        android:layout_marginTop="490dp"
        android:layout_marginRight="30dp"
        android:text="NEXT QUESTION"
        android:background="#E64A19"
        android:textColor="#fff"
        android:textSize="22dp"/>

    <Button
        android:id="@+id/buttonquitquiz"
        android:layout_width="381dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/displayname"
        android:layout_marginTop="570dp"
        android:layout_marginRight="30dp"
        android:text="QUIT"
        android:background="#0033cc"
        android:textColor="#fff"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/tvyourscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score"
        android:textColor="#000"
        android:textSize="24dp"
        android:layout_marginTop="680dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvyourscorenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#000"
        android:textSize="24dp"
        android:layout_marginTop="680dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="368dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"/>





</RelativeLayout>